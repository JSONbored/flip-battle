# Flip Battle Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Farcaster Integration
# Get from: https://neynar.com
NEXT_PUBLIC_NEYNAR_API_KEY=your_neynar_api_key_here

# Network Configuration
# Use "testnet" for Base Sepolia or "mainnet" for Base Mainnet
NEXT_PUBLIC_NETWORK=testnet

# Contract Addresses (Base Sepolia)
# Update these after deploying contracts
NEXT_PUBLIC_FLIP_BATTLE_ADDRESS=0x
NEXT_PUBLIC_STREAK_MANAGER_ADDRESS=0x
NEXT_PUBLIC_REFERRAL_SYSTEM_ADDRESS=0x
NEXT_PUBLIC_DAILY_FREE_FLIP_ADDRESS=0x

# Contract Addresses (Base Mainnet)
# NEXT_PUBLIC_FLIP_BATTLE_ADDRESS=0x
# NEXT_PUBLIC_STREAK_MANAGER_ADDRESS=0x
# NEXT_PUBLIC_REFERRAL_SYSTEM_ADDRESS=0x
# NEXT_PUBLIC_DAILY_FREE_FLIP_ADDRESS=0x

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# App Metadata
NEXT_PUBLIC_APP_NAME=Flip Battle
NEXT_PUBLIC_APP_URL=https://flipbattle.xyz
NEXT_PUBLIC_APP_DESCRIPTION=Provably fair coin flip betting on Base
